{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom", "vite/client"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/setupTests.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/vite-env.d.ts",
    "src/jest-env.d.ts"
  ]
}

